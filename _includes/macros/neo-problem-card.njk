{% macro render(problem, color) %}
<div style="
  background: {{ color or '#FF6B6B' }};
  border: 5px solid #000;
  padding: 32px 24px;
  box-shadow: 8px 8px 0 #000;
  text-align: center;
  transform: rotate(-1deg);
  transition: transform 0.2s;
">
  <div style="
    font-size: 56px;
    font-weight: 900;
    line-height: 1;
    margin-bottom: 16px;
    color: #000;
    text-shadow: 2px 2px 0 rgba(255,255,255,0.3);
  ">{{ problem.stat }}</div>
  <div style="
    font-size: 18px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    color: #000;
    line-height: 1.4;
  ">{{ problem.label }}</div>
</div>
{% endmacro %}
