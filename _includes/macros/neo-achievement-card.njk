{% macro render(achievement, color) %}
<div style="
  background: {{ color or '#00FFD1' }};
  border: 5px solid #000;
  padding: 32px 24px;
  box-shadow: 6px 6px 0 #000;
  text-align: center;
  min-width: 200px;
">
  <div style="
    font-size: 48px;
    font-weight: 900;
    line-height: 1;
    margin-bottom: 8px;
  ">{{ achievement.number }}<span style="color: #FF006E;">+</span></div>
  <div style="
    font-size: 16px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1px;
  ">{{ achievement.label }}</div>
</div>
{% endmacro %}
