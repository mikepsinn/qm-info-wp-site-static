{% macro render(automationSection, color) %}
<div style="
  background: {{ color or '#fff' }};
  border: 5px solid #000;
  padding: 40px;
  box-shadow: 10px 10px 0 #000;
  margin-bottom: 40px;
">
  <h3 style="
    font-size: 36px;
    font-weight: 900;
    margin: 0 0 30px 0;
    text-transform: uppercase;
    letter-spacing: -1px;
    color: #000;
  ">{{ automationSection.title }}</h3>

  <div style="display: grid; gap: 20px;">
    {% for feature in automationSection.features %}
    <div style="
      background: rgba(255,255,255,0.5);
      border: 3px solid #000;
      padding: 20px;
      border-left: 8px solid #000;
    ">
      <h4 style="
        font-size: 20px;
        font-weight: 700;
        margin: 0 0 8px 0;
        color: #000;
      ">{{ feature.name }}</h4>
      <p style="
        font-size: 16px;
        line-height: 1.5;
        margin: 0;
        color: #333;
      ">{{ feature.description }}</p>
    </div>
    {% endfor %}
  </div>
</div>
{% endmacro %}
