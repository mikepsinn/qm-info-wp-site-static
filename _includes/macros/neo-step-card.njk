{% macro render(step, color) %}
<div style="
  background: {{ color or '#FF006E' }};
  border: 5px solid #000;
  padding: 32px;
  box-shadow: 8px 8px 0 #000;
  margin-bottom: 24px;
">
  <div style="
    display: inline-block;
    background: #FFEB3B;
    border: 3px solid #000;
    padding: 8px 16px;
    margin-bottom: 16px;
    font-weight: 900;
    font-size: 20px;
  ">{{ step.label }}</div>
  <h3 style="
    font-size: 32px;
    font-weight: 900;
    margin: 0 0 16px 0;
    text-transform: uppercase;
    color: #fff;
  ">{{ step.title }}</h3>
  <p style="
    font-size: 18px;
    line-height: 1.5;
    margin: 0;
    color: #fff;
    font-weight: 600;
  ">{{ step.description | safe }}</p>
</div>
{% endmacro %}
