{% macro render(feature) %}
<div style="
  background: #FFEB3B;
  border: 5px solid #000;
  padding: 24px;
  box-shadow: 8px 8px 0 #000;
  transform: rotate(-1deg);
  transition: transform 0.2s, box-shadow 0.2s;
">
  <div style="
    width: 64px;
    height: 64px;
    background: #000;
    border: 3px solid #000;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 16px;
    font-size: 32px;
  ">
    <span style="filter: invert(1);">{{ feature.icon or 'ğŸ”¬' }}</span>
  </div>
  <h3 style="
    font-size: 24px;
    font-weight: 900;
    margin: 0 0 12px 0;
    text-transform: uppercase;
    letter-spacing: -1px;
  ">{{ feature.title | safe | striptags }}</h3>
  <p style="
    font-size: 16px;
    line-height: 1.4;
    margin: 0;
    font-weight: 500;
  ">{{ feature.description }}</p>
</div>
{% endmacro %}
