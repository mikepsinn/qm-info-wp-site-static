<!-- Neobrutalist How It Works Section -->
<section style="background: #f5f5f5; padding: 80px 20px; border-top: 8px solid #000;">
	<div class="container" style="max-width: 900px; margin: 0 auto;">
		<h2 style="
			font-size: 56px;
			font-weight: 900;
			text-align: center;
			margin: 0 0 60px 0;
			text-transform: uppercase;
			letter-spacing: -2px;
			background: #FF006E;
			color: #fff;
			border: 5px solid #000;
			padding: 20px;
			box-shadow: 12px 12px 0 #000;
			">How It Works</h2>
		{% import "macros/neo-step-card.njk" as stepCard %}
		{% set stepColors = ['#00FFD1', '#FFEB3B', '#8B5CF6'] %}
		{% for step in steps %}
			{{ stepCard.render(step, stepColors[loop.index0]) }}
		{% endfor %}
	</div>
</section>

