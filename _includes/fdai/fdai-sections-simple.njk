{# Simple FDAI Sections using fdaiSections data with inline styles #}

<!-- Data Collection Section -->
<section style="background: #fff; padding: 80px 20px; border-top: 8px solid #000;">
  <div style="max-width: 1200px; margin: 0 auto;">
    <h2 style="font-size: 56px; font-weight: 900; text-align: center; margin: 0 0 60px 0; text-transform: uppercase;">
      {{ fdaiSections.dataCollection.title }}
    </h2>
    
    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 32px;">
      {% for method in fdaiSections.dataCollection.methods %}
      <div style="border: 5px solid #000; padding: 32px; background: #f5f5f5; box-shadow: 8px 8px 0 #000;">
        {% if method.image %}
        <img src="{{ method.image }}" alt="{{ method.name }}" style="max-width: 100%; border: 3px solid #000; margin-bottom: 20px;" />
        {% endif %}
        <h3 style="font-size: 24px; font-weight: 900; margin: 0 0 16px 0;">{{ method.name }}</h3>
        <p style="font-size: 16px; line-height: 1.5; margin: 0;">{{ method.description }}</p>
      </div>
      {% endfor %}
    </div>
  </div>
</section>

<!-- Automated Data Analysis Section -->
<section style="background: #FFEB3B; padding: 80px 20px; border-top: 8px solid #000;">
  <div style="max-width: 900px; margin: 0 auto; text-align: center;">
    <h2 style="font-size: 56px; font-weight: 900; margin: 0 0 30px 0; color: #000;">
      {{ fdaiSections.automatedDataAnalysis.title }}
    </h2>
    <p style="font-size: 22px; font-weight: 600; color: #000; line-height: 1.6; margin: 0 0 40px 0;">
      {{ fdaiSections.automatedDataAnalysis.description }}
    </p>
    {% if fdaiSections.automatedDataAnalysis.image %}
    <img src="{{ fdaiSections.automatedDataAnalysis.image }}" alt="Data Analysis" style="max-width: 600px; width: 100%; border: 5px solid #000; box-shadow: 12px 12px 0 #000;" />
    {% endif %}
  </div>
</section>

<!-- Personal Studies Section -->
<section style="background: #1a1a1a; padding: 80px 20px; border-top: 8px solid #000; color: #fff;">
  <div style="max-width: 1000px; margin: 0 auto;">
    <h2 style="font-size: 56px; font-weight: 900; text-align: center; margin: 0 0 30px 0; color: #00FFD1;">
      {{ fdaiSections.personalStudies.title }}
    </h2>
    <p style="font-size: 20px; line-height: 1.6; text-align: center; margin: 0 0 40px 0;">
      {{ fdaiSections.personalStudies.description }}
    </p>
    
    {% if fdaiSections.personalStudies.image %}
    <div style="text-align: center; margin: 40px 0;">
      <img src="{{ fdaiSections.personalStudies.image }}" alt="Personal Studies" style="max-width: 100%; border: 5px solid #000; box-shadow: 12px 12px 0 #00FFD1;" />
    </div>
    {% endif %}

    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(400px, 1fr)); gap: 40px; margin-top: 60px;">
      <!-- Onset Delays -->
      <div style="background: #2a2a2a; border: 5px solid #00FFD1; padding: 40px;">
        <h3 style="font-size: 32px; font-weight: 900; margin: 0 0 20px 0; color: #00FFD1;">
          {{ fdaiSections.personalStudies.onsetDelays.title }}
        </h3>
        <p style="font-size: 18px; line-height: 1.5; margin: 0 0 20px 0;">
          {{ fdaiSections.personalStudies.onsetDelays.description }}
        </p>
        {% if fdaiSections.personalStudies.onsetDelays.image %}
        <img src="{{ fdaiSections.personalStudies.onsetDelays.image }}" alt="Onset Delays" style="max-width: 100%; border: 3px solid #00FFD1;" />
        {% endif %}
      </div>

      <!-- Duration of Action -->
      <div style="background: #2a2a2a; border: 5px solid #FF6B6B; padding: 40px;">
        <h3 style="font-size: 32px; font-weight: 900; margin: 0 0 20px 0; color: #FF6B6B;">
          {{ fdaiSections.personalStudies.durationOfAction.title }}
        </h3>
        <p style="font-size: 18px; line-height: 1.5; margin: 0 0 20px 0;">
          {{ fdaiSections.personalStudies.durationOfAction.description }}
        </p>
        {% if fdaiSections.personalStudies.durationOfAction.image %}
        <img src="{{ fdaiSections.personalStudies.durationOfAction.image }}" alt="Duration of Action" style="max-width: 100%; border: 3px solid #FF6B6B;" />
        {% endif %}
      </div>
    </div>
  </div>
</section>

<!-- Effortless Trial Participation Section -->
<section style="background: #FF006E; padding: 80px 20px; border-top: 8px solid #000; color: #fff;">
  <div style="max-width: 1000px; margin: 0 auto;">
    <h2 style="font-size: 56px; font-weight: 900; text-align: center; margin: 0 0 20px 0;">
      {{ fdaiSections.effortlessTrialParticipation.title }}
    </h2>
    <p style="font-size: 24px; font-weight: 600; text-align: center; margin: 0 0 60px 0;">
      {{ fdaiSections.effortlessTrialParticipation.subtitle }}
    </p>

    {% for step in fdaiSections.effortlessTrialParticipation.steps %}
    <div style="background: rgba(255,255,255,0.1); border: 5px solid #000; padding: 40px; margin-bottom: 32px;">
      <div style="background: #FFEB3B; color: #000; border: 3px solid #000; padding: 8px 16px; display: inline-block; font-weight: 900; font-size: 20px; margin-bottom: 20px;">
        {{ step.number }}
      </div>
      <h3 style="font-size: 36px; font-weight: 900; margin: 0 0 20px 0;">{{ step.title }}</h3>
      <p style="font-size: 20px; line-height: 1.5; margin: 0 0 20px 0;">{{ step.description }}</p>
      {% if step.image %}
      <img src="{{ step.image }}" alt="{{ step.title }}" style="max-width: 100%; border: 3px solid #000; box-shadow: 8px 8px 0 rgba(0,0,0,0.3);" />
      {% endif %}
    </div>
    {% endfor %}
  </div>
</section>

