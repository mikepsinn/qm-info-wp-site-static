<!-- Citizen Science Section -->
<section style="background: #fff; padding: 80px 20px; border-top: 8px solid #000;">
  <div style="max-width: 900px; margin: 0 auto; text-align: center;">
    <h2 style="font-size: 56px; font-weight: 900; margin: 0 0 30px 0;">{{ fdaiSections.citizenScience.title }}</h2>
    <p style="font-size: 22px; line-height: 1.6; margin: 0 0 40px 0;">{{ fdaiSections.citizenScience.description }}</p>
    
    {% if fdaiSections.citizenScience.image %}
    <img src="{{ fdaiSections.citizenScience.image }}" alt="Citizen Science" style="max-width: 100%; border: 5px solid #000; box-shadow: 12px 12px 0 #FF006E; margin: 40px 0;" />
    {% endif %}

    <a href="{{ fdaiSections.citizenScience.createStudyLink }}" target="_blank" style="display: inline-block; background: #FF006E; color: #fff; padding: 16px 32px; border: 5px solid #000; box-shadow: 8px 8px 0 #000; font-weight: 900; font-size: 20px; text-decoration: none; margin-top: 20px;">
      {{ fdaiSections.citizenScience.createStudyText }}
    </a>
  </div>
</section>

