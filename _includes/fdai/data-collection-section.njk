<!-- Data Collection Section -->
<section style="background: #fff; padding: 80px 20px; border-top: 8px solid #000;">
  <div style="max-width: 1200px; margin: 0 auto;">
    <h2 style="font-size: 56px; font-weight: 900; text-align: center; margin: 0 0 60px 0; text-transform: uppercase;">
      {{ fdaiSections.dataCollection.title }}
    </h2>
    
    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 32px;">
      {% for method in fdaiSections.dataCollection.methods %}
      <div style="border: 5px solid #000; padding: 32px; background: #f5f5f5; box-shadow: 8px 8px 0 #000;">
        {% if method.image %}
        <img src="{{ method.image }}" alt="{{ method.name }}" style="max-width: 100%; border: 3px solid #000; margin-bottom: 20px;" />
        {% endif %}
        <h3 style="font-size: 24px; font-weight: 900; margin: 0 0 16px 0;">{{ method.name }}</h3>
        <p style="font-size: 16px; line-height: 1.5; margin: 0;">{{ method.description }}</p>
      </div>
      {% endfor %}
    </div>
  </div>
</section>

